  provider = "postgresql"
  url      = "postgresql://postgres:%23Upasana%402511@localhost:5432/g27DB"
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String?
  tweets Tweet[]
}
 
model Tweet{
  id Int @id @default (autoincrement())
  userId Int
  date DateTime @default (now())
  content String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


